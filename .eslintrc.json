{
    "root": true,
    "parser": "vue-eslint-parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "extends": [
        "plugin:vue/essential",
        "eslint:recommended",
        "prettier"
    ],
    "env": {
        "es2021": true,
        "node": true
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "vue/no-multiple-template-root": "off",
        "vue/html-indent": [
            "error",
            2,
            {
                "attribute": 1,
                "baseIndent": 1,
                "closeBracket": 0,
                "alignAttributesVertically": true,
                "ignores": []
            }
        ]
    }
}